@model IEnumerable<PoePart1.Models.Event>

<h1>Events</h1>

<a href="@Url.Action("Create")">Create New Event</a>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@eventItem.Description</td>
                <td>
                    <a href="@Url.Action("Details", new { id = eventItem.EventID })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = eventItem.EventID })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = eventItem.EventID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

