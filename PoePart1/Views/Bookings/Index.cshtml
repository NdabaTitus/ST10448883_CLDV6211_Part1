@model IEnumerable<PoePart1.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile Number</th>
            <th>Event Name</th>
            <th>Venue Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.FirstName</td>
                <td>@booking.LastName</td>
                <td>@booking.Email</td>
                <td>@booking.MobileNumber</td>
                <td>@booking.Events.EventName</td>
                <td>@booking.Venue.VenueName</td>
                <td>
                    <a href="@Url.Action("Delete", new { id = booking.BookingID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

